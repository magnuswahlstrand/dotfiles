{
  "title": "2nd Layer",
  "rules": [
    {
      "description": "Change greater than to |",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["right_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Paragraph to toggle application, + cmd to switch window",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "equal_sign",
              "modifiers": ["right_command"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["right_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change Option + q/w/e to tilde, /, $",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "4",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change Option + u/i/o/p/Ã¥ to {, [, ], }, \\",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "8",
              "modifiers": ["option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "9",
              "modifiers": ["option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "8",
              "modifiers": ["option", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "9",
              "modifiers": ["option", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["option", "shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change Option + a/s/d/f to , up, down, ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Change Option + h/j/k/l to Arrows",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    }
  ]
}
